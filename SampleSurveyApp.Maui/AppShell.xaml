<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SampleSurveyApp.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SampleSurveyApp.Maui"
    xmlns:helpers="clr-namespace:SampleSurveyApp.Maui.Helpers"
    xmlns:controls="clr-namespace:SampleSurveyApp.Maui.Controls"
    xmlns:pages="clr-namespace:SampleSurveyApp.Maui.Pages"
    xmlns:models="clr-namespace:SampleSurveyApp.Core.Domain;assembly=SampleSurveyApp.Core"
    Shell.FlyoutBehavior="Flyout"
    FlyoutWidth="250"
    FlyoutHeight="450">
    <!--<Shell.FlyoutBackground>
        <LinearGradientBrush StartPoint="0,0"
                             EndPoint="1,1">
            <GradientStop Color="#8A2387"
                          Offset="0.1" />
            <GradientStop Color="#E94057"
                          Offset="0.6" />
            <GradientStop Color="#F27121"
                          Offset="1.0" />
        </LinearGradientBrush>
    </Shell.FlyoutBackground>-->

    <Shell.ItemTemplate>
        <DataTemplate>
            <Grid ColumnDefinitions="50,*" Padding="10">
                <Image Source="{Binding Icon}"/>
                <Label Grid.Column="1" Text="{Binding Title}" TextColor="#004e89" FontAttributes="Bold"/>
            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>

    <Shell.MenuItemTemplate>
        <DataTemplate>
            <Grid ColumnDefinitions="50,*" Padding="10">
                <Image Source="{Binding Icon}" BackgroundColor="Transparent"/>
                <Label Grid.Column="1" Text="{Binding Title}" TextColor="#ff6b35" FontAttributes="Bold"/>
            </Grid>
        </DataTemplate>
    </Shell.MenuItemTemplate>

   

    <Shell.FlyoutHeader>
        <controls:FlyoutHeader />
    </Shell.FlyoutHeader>
    <Shell.FlyoutFooter>
        <controls:FlyoutFooter/>
    </Shell.FlyoutFooter>


    <FlyoutItem Title="Survey Page" Icon="{FontImage FontFamily=MaterialIcons, Glyph={x:Static models:Icons.HomeIcon}, Size=25, Color=#ff6b35}">
        <ShellContent ContentTemplate="{DataTemplate pages:SurveyPage}" Route="SurveyPage"/>
    </FlyoutItem>

    <FlyoutItem Title="Overview Page" Icon="{FontImage FontFamily=MaterialIcons, Glyph={x:Static models:Icons.HomeIcon}, Size=25, Color=#ff6b35}">
        <ShellContent ContentTemplate="{DataTemplate pages:OverviewPage}" Route="OverviewPage"/>

    </FlyoutItem>
    <MenuItem Text="Curr Lang" 
              Command="{Binding ChangeLanguageCommand}"
              IconImageSource="{FontImage FontFamily=MaterialIcons, Glyph={x:Static models:Icons.HomeIcon}, Size=25, Color=#ff6b35}">
    </MenuItem>

    <MenuItem Text="Delete Surveys"
              Command="{Binding DeleteAllSurveysCommand}"
              IconImageSource="{FontImage FontFamily=MaterialIcons, Glyph={x:Static models:Icons.HomeIcon}, Size=25, Color=#ff6b35}">
        
    </MenuItem>
    <MenuItem Text="Delete Response"
              Command="{Binding DeleteAllResponsesCommand}"
              IconImageSource="{FontImage FontFamily=MaterialIcons, Glyph={x:Static models:Icons.DeleteIcon}, Size=25, Color=#ff6b35}"/>
</Shell>

